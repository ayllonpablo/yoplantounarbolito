<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    android:fillViewport="true"
    tools:context="app.sembrando.vidas.RegisterTreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Logo Bosquecito Urbano -->
        <ImageView
            android:id="@+id/logo_bosquecito_tree"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:contentDescription="Logo de Bosquecito Urbano"
            app:srcCompat="@mipmap/logo_bosquecito"/>

        <!-- Title -->
        <TextView
            android:id="@+id/titleRegisterTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra tu árbol"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleRegisterTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dale un nombre único a tu arbolito"
            android:textSize="14sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Main Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Tree Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldTreeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del árbol"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    android:layout_marginBottom="16dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNameRegisterTree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/text_brown"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Avatar Selection Section -->
                <TextView
                    android:id="@+id/textViewAvatarLabel"
                    android:text="Selecciona un personaje:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Avatar Options - Horizontal Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <!-- Avatar 1 - Hoja -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatar1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/card_green_light"
                            android:layout_marginEnd="12dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@mipmap/hoja"
                                    android:contentDescription="Avatar Hoja"/>
                                <Button
                                    android:id="@+id/imageButtonOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="OnclickSelectAvatar1"
                                    android:background="?attr/selectableItemBackground"/>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Avatar 2 - Brote Feliz -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatar2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/card_green_light"
                            android:layout_marginEnd="12dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@mipmap/brote_feliz"
                                    android:contentDescription="Avatar Brote Feliz"/>
                                <Button
                                    android:id="@+id/imageButtonOne2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="OnclickSelectAvatar2"
                                    android:background="?attr/selectableItemBackground"/>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Avatar 3 - Arbolito Feliz -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatar3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/card_green_light"
                            android:layout_marginEnd="12dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@mipmap/arbolito_feliz"
                                    android:contentDescription="Avatar Arbolito Feliz"/>
                                <Button
                                    android:id="@+id/imageButtonOne3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="OnclickSelectAvatar3"
                                    android:background="?attr/selectableItemBackground"/>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Avatar 4 - Maceta Femenina -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatar4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/card_green_light"
                            android:layout_marginEnd="12dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@mipmap/maceta_femenina"
                                    android:contentDescription="Avatar Maceta Femenina"/>
                                <Button
                                    android:id="@+id/imageButtonOne4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="OnclickSelectAvatar4"
                                    android:background="?attr/selectableItemBackground"/>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Avatar 5 - Maceta Masculino -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvatar5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/card_green_light"
                            android:layout_marginEnd="12dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@mipmap/maseta_masculino"
                                    android:contentDescription="Avatar Maceta Masculino"/>
                                <Button
                                    android:id="@+id/imageButtonOne5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="OnclickSelectAvatar5"
                                    android:background="?attr/selectableItemBackground"/>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_register_tree_resgister"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Registrar árbol"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/dark_green"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Location Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Location Title -->
                <TextView
                    android:id="@+id/textViewLocationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del árbol"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Location Instructions -->
                <TextView
                    android:id="@+id/textViewLocationInfo"
                    android:text="La ubicación se registrará según la posición marcada en el mapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:textColor="@color/text_brown"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginBottom="16dp"/>

                <!-- Map Fragment -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <fragment
                        android:id="@+id/map_register_tree"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cameraZoom="15"
                        app:uiRotateGestures="true"
                        app:uiZoomControls="true"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
