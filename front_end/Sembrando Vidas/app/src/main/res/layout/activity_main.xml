<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    tools:context="app.sembrando.vidas.MainActivity">

    <!-- Loading Progress Indicator (at the very top) -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:backgroundTint="@null"
        android:background="@color/dark_green"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:indicatorColor="@color/green_primary"
        app:trackColor="@color/beige_background"/>

    <!-- Horizontal Guidelines for layout structure -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_logos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_after_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle_logos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88"/>

    <!-- Vertical Guideline for center alignment -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- TOP ROW: Hojas decorativas (left) - Increased size -->
    <ImageView
        android:id="@+id/hojas_decorativas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Hojas decorativas"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/hojas_main"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_logos"
        app:layout_constraintBottom_toTopOf="@+id/guideline_after_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- TOP ROW: EcoWill Logo (right) - Increased size -->
    <ImageView
        android:id="@+id/logo_ecowill_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Logo EcoWill Foundation"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/logo_ecowill"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_logos"
        app:layout_constraintBottom_toTopOf="@+id/guideline_after_top"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- CENTER: Logo Bosquecito Urbano (main logo) -->
    <ImageView
        android:id="@+id/logo_bosquecito_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Logo Bosquecito Urbano"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/logo_bosquecito"
        app:layout_constraintTop_toBottomOf="@+id/guideline_after_top"
        app:layout_constraintBottom_toTopOf="@+id/guideline_center_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- MIDDLE ROW: US Embassy Logo (left) - Same height as Inspira -->
    <ImageView
        android:id="@+id/logo_embajada_usa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Logo Embajada de Estados Unidos"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/embajada_usa"
        app:layout_constraintTop_toBottomOf="@+id/guideline_center_logo"
        app:layout_constraintBottom_toBottomOf="@+id/logo_inspira"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logo_inspira"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"/>

    <!-- MIDDLE ROW: Inspira Alumni Bolivia Logo (right) - Same height as Embassy -->
    <ImageView
        android:id="@+id/logo_inspira"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Logo Inspira Alumni Bolivia"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/logo_inspira"
        app:layout_constraintTop_toBottomOf="@+id/guideline_center_logo"
        app:layout_constraintStart_toEndOf="@+id/logo_embajada_usa"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"/>

    <!-- BOTTOM: Support Text - Below Embassy logo, aligned left -->
    <TextView
        android:id="@+id/text_con_apoyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con el apoyo de:"
        android:textColor="@color/dark_green"
        android:textSize="24dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@+id/logo_embajada_usa"
        app:layout_constraintStart_toStartOf="@+id/logo_embajada_usa"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
