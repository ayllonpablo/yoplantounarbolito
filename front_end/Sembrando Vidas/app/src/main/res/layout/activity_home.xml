<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    tools:context="app.sembrando.vidas.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Logo Bosquecito Urbano -->
        <ImageView
            android:id="@+id/logo_bosquecito"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:contentDescription="Logo de Bosquecito Urbano"
            app:srcCompat="@mipmap/logo_bosquecito"/>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linear_progres_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:backgroundTint="@null"
            android:visibility="gone"
            android:background="@color/green_secondary"/>

        <!-- Saludo personalizado -->
        <TextView
            android:id="@+id/text_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola Pablo"
            android:textSize="22sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="empecemos a sembrar vidas"
            android:textSize="16sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Card: Crea tu árbol (shown when user has no tree) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_crea_arbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_green_light">

            <LinearLayout
                android:id="@+id/linear_layout_crea_tu_arbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Imagen crea tu árbol -->
                <ImageView
                    android:id="@+id/image_crea_arbol"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:contentDescription="Crea tu árbol"
                    app:srcCompat="@mipmap/crea_tu_arbol"
                    android:layout_marginBottom="8dp"/>

                <!-- Botón Crea tu árbol -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_home_register_tree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crea tu árbol"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:backgroundTint="@color/dark_green"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Principal: Cuida tu arbolito -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_cuida_arbolito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_green_light">

            <LinearLayout
                android:id="@+id/linear_layout_cuida_tu_arbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Avatar del árbol (Groot) -->
                <ImageView
                    android:id="@+id/image_home_avatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="Avatar de tu árbol"
                    app:srcCompat="@mipmap/hoja"
                    android:layout_marginBottom="16dp"/>

                <!-- Botón Cuida tu arbolito -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_home_your_tree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuida tu arbolito"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:backgroundTint="@color/dark_green"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid de botones 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp">

            <!-- Ranking -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_ranking"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Icono de ranking"
                        app:srcCompat="@mipmap/ranking"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:text="Ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Editar árbol -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit_tree"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Icono de editar árbol"
                        app:srcCompat="@mipmap/config_arbol"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:text="Editar árbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Editar Usuario -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit_user"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Icono de editar usuario"
                        app:srcCompat="@mipmap/configuracion"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:text="Editar Usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mis datos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Icono de perfil"
                        app:srcCompat="@mipmap/perfil"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:text="Mis datos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Botón EXIT -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dark_green">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="Botón de cerrar sesión"
                    app:srcCompat="@mipmap/logout"
                    />

                <Button
                    android:id="@+id/button_home_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logos footer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/logo_embajada_usa"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Embajada de Estados Unidos"
                app:srcCompat="@mipmap/embajada_usa"
                android:layout_marginEnd="24dp"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/logo_inspira"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Inspira Alumni Bolivia"
                app:srcCompat="@mipmap/logo_inspira"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
