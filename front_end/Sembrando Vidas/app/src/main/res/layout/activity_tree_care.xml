<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    tools:context="app.sembrando.vidas.TreeCareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Logo Bosquecito Urbano -->
        <ImageView
            android:id="@+id/logo_bosquecito"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:contentDescription="Logo de Bosquecito Urbano"
            app:srcCompat="@mipmap/logo_bosquecito"/>

        <!-- Saludo personalizado -->
        <TextView
            android:id="@+id/text_hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola usuario"
            android:textSize="22sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Puntos del usuario -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienes "
                android:textSize="18sp"
                android:textColor="@color/text_brown"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/text_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 puntos"
                android:textSize="18sp"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>

        <!-- Card: Información del árbol -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tree_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_green_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <!-- Avatar del árbol -->
                <ImageView
                    android:id="@+id/image_tree_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Avatar del árbol"
                    app:srcCompat="@mipmap/hoja"
                    android:layout_marginEnd="16dp"/>

                <!-- Información del árbol -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_green"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi árbol"
                        android:textSize="18sp"
                        android:textColor="@color/text_brown"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Texto de acciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acciones de cuidado"
            android:textSize="16sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Grid de botones de acciones 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp">

            <!-- Regar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_regar"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="Icono de regar"
                            app:srcCompat="@mipmap/regadera"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/textView14"
                            android:text="Regar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_green"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_regar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Limpieza -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_limpieza"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="Icono de limpieza"
                            app:srcCompat="@mipmap/limpieza"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/textView17"
                            android:text="Limpieza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_green"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_limpiar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Abono -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_abono"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView160"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="Icono de abono"
                            app:srcCompat="@mipmap/abono"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/textVhiew14"
                            android:text="Abono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_green"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_abonar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Agarre -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_agarre"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageVihjew11"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="Icono de agarre"
                            app:srcCompat="@mipmap/agarre"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/textVighew17"
                            android:text="Agarre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_green"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_establecido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Logos footer -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/logo_embajada_usa"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Embajada de Estados Unidos"
                app:srcCompat="@mipmap/embajada_usa"
                android:layout_marginEnd="24dp"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/logo_inspira"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Inspira Alumni Bolivia"
                app:srcCompat="@mipmap/logo_inspira"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
