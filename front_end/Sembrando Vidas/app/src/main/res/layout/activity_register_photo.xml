<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    android:fillViewport="true"
    tools:context="app.sembrando.vidas.RegisterPhotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Logo Bosquecito Urbano -->
        <ImageView
            android:id="@+id/logo_bosquecito_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:contentDescription="Logo de Bosquecito Urbano"
            app:srcCompat="@mipmap/logo_bosquecito"/>

        <!-- Title -->
        <TextView
            android:id="@+id/titleRegisterPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡FotografÃ­a tu Ã¡rbol!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleRegisterPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captura el momento especial de tu plantaciÃ³n"
            android:textSize="14sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Main Photo Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Instructions -->
                <TextView
                    android:id="@+id/textViewInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toma una fotografÃ­a clara de tu Ã¡rbol para documentar su crecimiento"
                    android:textSize="15sp"
                    android:textColor="@color/text_brown"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"/>

                <!-- Photo Preview Container -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/photoPreviewCard"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_green_light"
                    android:layout_marginBottom="20dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Placeholder Image -->
                        <LinearLayout
                            android:id="@+id/placeholderContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@mipmap/arbolito_feliz"
                                android:alpha="0.4"
                                android:contentDescription="Ãcono de Ã¡rbol"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tu foto aparecerÃ¡ aquÃ­"
                                android:textSize="14sp"
                                android:textColor="@color/text_green_light"
                                android:fontFamily="@font/poppins_light"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Actual Photo -->
                        <ImageView
                            android:id="@+id/photo_tree"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="Foto del Ã¡rbol"/>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- Take Photo Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_load_photo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Tomar fotografÃ­a"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/dark_green"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    android:elevation="4dp"
                    android:onClick="onclick"
                    android:layout_marginBottom="12dp"/>

                <!-- Save Photo Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_photo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Guardar y continuar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/green_tertiary"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    android:elevation="4dp"
                    android:onClick="OnclickSavePhoto"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tips Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Tips Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Consejos para una buena foto"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Tip 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textSize="14sp"
                        android:textColor="@color/green_tertiary"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AsegÃºrate de tener buena iluminaciÃ³n"
                        android:textSize="14sp"
                        android:textColor="@color/text_brown"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>

                <!-- Tip 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textSize="14sp"
                        android:textColor="@color/green_tertiary"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Encuadra bien tu Ã¡rbol en el centro para que nuestro sistema lo reconozca"
                        android:textSize="14sp"
                        android:textColor="@color/text_brown"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>

                <!-- Tip 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textSize="14sp"
                        android:textColor="@color/green_tertiary"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MantÃ©n la cÃ¡mara firme para evitar fotos borrosas"
                        android:textSize="14sp"
                        android:textColor="@color/text_brown"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/dark_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/loadPhoto"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminateTint="@color/white"/>

                    <TextView
                        android:id="@+id/textViewLoadPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guardando tu fotografÃ­a..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por favor espera un momento"
                        android:textSize="14sp"
                        android:textColor="@color/card_green_light"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>
</ScrollView>
