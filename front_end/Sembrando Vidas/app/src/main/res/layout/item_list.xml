<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ranking badge (vertical: número arriba, texto abajo) -->
        <LinearLayout
            android:id="@+id/ranking_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/id_item_indice"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/dark_green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puesto"
                android:textSize="10sp"
                android:textColor="@color/text_brown"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Avatar del árbol -->
        <ImageView
            android:id="@+id/avatar_ranking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:contentDescription="Avatar del árbol"
            app:srcCompat="@mipmap/brote_feliz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Información del usuario -->
        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/ranking_badge"
            app:layout_constraintEnd_toStartOf="@id/avatar_ranking"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario: "
                android:textSize="14sp"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/id_item_name_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre de Usuario"
                android:textSize="14sp"
                android:textColor="@color/text_brown"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Nombre del árbol -->
        <LinearLayout
            android:id="@+id/tree_info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/ranking_badge"
            app:layout_constraintEnd_toStartOf="@id/avatar_ranking"
            app:layout_constraintTop_toBottomOf="@id/user_info_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbolito: "
                android:textSize="14sp"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/id_item_name_tree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi árbol"
                android:textSize="14sp"
                android:textColor="@color/text_brown"
                android:fontFamily="@font/poppins_light"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Puntos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/ranking_badge"
            app:layout_constraintTop_toBottomOf="@id/tree_info_layout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/id_item_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textSize="18sp"
                android:textColor="@color/green_primary"
                android:fontFamily="@font/poppins_bold"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
