<?xml version="1.0" encoding="utf-8"?>
<!--
    User Registration Screen
    Redesigned to match Bosquecito Urbano design system:
    - Beige background (#EDE9DC)
    - Poppins font family throughout
    - Card-based design with rounded corners (20dp radius)
    - Consistent color palette: dark_green primary, text_brown secondary
    - Modern TextInputLayout components with outlined boxes
    - Password toggle visibility enabled
    - No embassy/Inspira logos (Bosquecito only)

    Design Philosophy:
    - Clean, welcoming registration experience
    - Progressive disclosure with scrollable form
    - Clear visual hierarchy with logo > title > subtitle > form
    - Accessible input fields with proper hints and types
    - Consistent 16dp spacing between form elements
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    android:fillViewport="true"
    tools:context="app.sembrando.vidas.RegisterUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Logo Bosquecito Urbano -->
        <ImageView
            android:id="@+id/logo_bosquecito_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Logo de Bosquecito Urbano"
            app:srcCompat="@mipmap/logo_bosquecito"/>

        <!-- Header Title -->
        <TextView
            android:id="@+id/text_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Únete a la comunidad"
            android:textSize="24sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_register_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta para empezar a plantar árboles"
            android:textSize="14sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Main Registration Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_register_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Progress Indicator (initially hidden) -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/linear_progres_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/dark_green"
                    app:trackColor="@color/card_green_light"
                    android:layout_marginBottom="16dp"/>

                <!-- First Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldFirstNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextFirstNameRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLastNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextLastNameRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldEmailRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmailRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Age Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldAgeRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextAgeRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldPhoneRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de teléfono"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPhoneRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Organization Field (Optional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldOrganizationRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Organización (opcional)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextOrganizationRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldPasswordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/dark_green"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPasswordRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldConfirmPasswordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/dark_green"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextConfirmationPasswordRegisterUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRegisterUser"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Crear cuenta"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:onClick="OnclickRegister"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/dark_green"
                    app:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Login Link (for users who already have an account) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_already_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? "
                android:textSize="14sp"
                android:textColor="@color/text_brown"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/text_login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión"
                android:textSize="14sp"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/poppins_bold"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
