<?xml version="1.0" encoding="utf-8"?>
<!--
    Edit User Profile Screen
    Redesigned to match Bosquecito Urbano design system:
    - Beige background (#EDE9DC)
    - Poppins font family
    - Card-based design with rounded corners
    - Consistent color palette with dark_green and text_brown
    - Modern TextInputLayout components
    - No embassy/Inspira logos (Bosquecito only)
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    android:fillViewport="true"
    tools:context="app.sembrando.vidas.EditUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Header con botón home y logo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <!-- Botón Home Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/button_home_edit_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icono_home"
                        android:scaleType="fitCenter"
                        android:contentDescription="Icono de inicio"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="10sp"
                        android:textColor="@color/dark_green"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logo Bosquecito Urbano -->
            <ImageView
                android:id="@+id/logo_bosquecito_edit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:contentDescription="Logo de Bosquecito Urbano"
                app:srcCompat="@mipmap/logo_bosquecito"/>
        </RelativeLayout>

        <!-- Header Title -->
        <TextView
            android:id="@+id/text_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualice sus datos"
            android:textSize="24sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_edit_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantenga su información actualizada"
            android:textSize="14sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Progress Indicator (initially hidden) -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/linear_progres_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/dark_green"
                    app:trackColor="@color/card_green_light"
                    android:layout_marginBottom="16dp"/>

                <!-- First Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextfirstnameEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextLastNameEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmailEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Age Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextAgeEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de teléfono"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPhoneEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Organization Field (Optional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Organización (opcional)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/dark_green"
                    app:hintTextColor="@color/dark_green"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextOrganizationEditUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_brown"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Update Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditerUser"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Actualizar datos"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:onClick="OnclickEdiUser"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/dark_green"
                    app:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
