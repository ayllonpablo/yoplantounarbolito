<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    tools:context="app.sembrando.vidas.RankingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Header con botón home y logo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Botón Home Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/button_home_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icono_home"
                        android:scaleType="fitCenter"
                        android:contentDescription="Icono de inicio"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="10sp"
                        android:textColor="@color/dark_green"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logo Bosquecito Urbano -->
            <ImageView
                android:id="@+id/logo_bosquecito_ranking"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:contentDescription="Logo de Bosquecito Urbano"
                app:srcCompat="@mipmap/logo_bosquecito"/>
        </RelativeLayout>

        <!-- Título Principal -->
        <TextView
            android:id="@+id/text_ranking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los más entusiastas!!"
            android:textSize="24sp"
            android:textColor="@color/dark_green"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Subtítulo motivacional -->
        <TextView
            android:id="@+id/text_ranking_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios que más cuidan sus árboles"
            android:textSize="14sp"
            android:textColor="@color/text_brown"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- RecyclerView para el ranking -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recicler_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"/>

        <!-- Logos footer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/logo_embajada_usa_ranking"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Embajada de Estados Unidos"
                app:srcCompat="@mipmap/embajada_usa"
                android:layout_marginEnd="24dp"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/logo_inspira_ranking"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Logo Inspira Alumni Bolivia"
                app:srcCompat="@mipmap/logo_inspira"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
