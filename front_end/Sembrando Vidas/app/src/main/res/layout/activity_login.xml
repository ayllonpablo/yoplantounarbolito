<?xml version="1.0" encoding="utf-8"?>
<!--
    Login Activity Layout - Sembrando Vidas
    Design: Clean, minimalist login screen with beige background theme

    Key Design Elements:
    - Beige background (#EDE9DC) for warm, natural feel
    - Logo at top for brand recognition
    - Two input fields with rounded corners and character counters
    - Large green primary button for login action
    - Decorative tree illustration for visual interest
    - Secondary register button with subtle styling

    Preserved IDs for Java compatibility:
    - editTextEmailLogin (email input field)
    - editTextPasswordLogin (password input field)
    - linear_progres_2 (progress indicator)
    - OnclickLogin method (login button)
    - OnclickGoToRegisterActivity method (register button)
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/beige_background"
    tools:context="app.sembrando.vidas.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Logo Section - Brand Identity -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/logo_bosquecito"
            android:contentDescription="Bosquecito Urbano Logo"
            android:scaleType="fitCenter" />

        <!-- Progress Indicator - Shows loading state during login -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linear_progres_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/green_primary"
            app:trackColor="@android:color/transparent"
            tools:visibility="visible" />

        <!-- Email/Username Input Field -->
        <!-- Uses TextInputLayout for Material Design compliance -->
        <!-- Character counter (0/50) shows input progress -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre de usuario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxStrokeColor="@color/text_brown"
            app:boxStrokeWidth="1dp"
            app:boxBackgroundColor="@color/card_white"
            app:hintTextColor="@color/text_brown"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:counterTextColor="@color/text_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/text_brown" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input Field -->
        <!-- Includes password visibility toggle icon -->
        <!-- Character counter shows input progress -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Contraseña"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxStrokeColor="@color/text_brown"
            app:boxStrokeWidth="1dp"
            app:boxBackgroundColor="@color/card_white"
            app:hintTextColor="@color/text_brown"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:counterTextColor="@color/text_brown"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/text_brown">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="50"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/text_brown" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Primary Login Button -->
        <!-- Large, prominent green button for main action -->
        <!-- Pill-shaped with 28dp corner radius -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="0dp"
            android:onClick="OnclickLogin"
            android:text="Ingresar"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            app:backgroundTint="@color/green_primary"
            app:cornerRadius="28dp"
            app:elevation="2dp"
            app:rippleColor="@color/dark_green" />

        <!-- Decorative Tree Illustration -->
        <!-- Adds visual interest and reinforces environmental theme -->
        <ImageView
            android:id="@+id/imageViewTreeDecoration"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/arbol_login"
            android:contentDescription="Decorative tree illustration"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <!-- Registration Prompt Text -->
        <!-- Guides users who don't have an account -->
        <TextView
            android:id="@+id/textViewRegisterPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="Si aún no tienes una cuenta."
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_brown" />

        <!-- Secondary Register Button -->
        <!-- Light background with green text for visual hierarchy -->
        <!-- Less prominent than login button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegisterActivity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:onClick="OnclickGoToRegisterActivity"
            android:text="REGÍSTRATE"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/green_primary"
            app:backgroundTint="@color/card_white"
            app:cornerRadius="28dp"
            app:strokeColor="@color/green_primary"
            app:strokeWidth="1dp"
            app:elevation="0dp"
            app:rippleColor="@color/card_green_light" />

    </LinearLayout>
</ScrollView>
